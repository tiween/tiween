# Tiween Production Environment Variables
# Copy this file to .env and fill in your production values.
# Do not commit .env to version control!

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================

# Database connection details
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=tiween
DATABASE_USERNAME=tiween
DATABASE_PASSWORD=your_secure_database_password

# Enable SSL for database connection (true for most cloud providers)
DATABASE_SSL=false

# =============================================================================
# REDIS (Cache & Sessions)
# =============================================================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Enable API response caching
CACHE_ENABLED=true

# =============================================================================
# STRAPI (CMS Backend)
# =============================================================================

# Public URL where Strapi is accessible
STRAPI_URL=https://api.tiween.tn

# Secret keys for Strapi (generate with: openssl rand -base64 32)
# APP_KEYS should be 4 comma-separated base64 strings
APP_KEYS=key1_base64,key2_base64,key3_base64,key4_base64
API_TOKEN_SALT=your_api_token_salt_base64
ADMIN_JWT_SECRET=your_admin_jwt_secret_base64
JWT_SECRET=your_jwt_secret_base64
TRANSFER_TOKEN_SALT=your_transfer_token_salt_base64

# =============================================================================
# NEXT.JS (Client Frontend)
# =============================================================================

# Public URL where the client is accessible
APP_PUBLIC_URL=https://tiween.tn

# NextAuth configuration
NEXTAUTH_URL=https://tiween.tn
NEXTAUTH_SECRET=your_nextauth_secret_base64

# Strapi API keys for the client
STRAPI_REST_READONLY_API_KEY=your_readonly_api_key
STRAPI_REST_CUSTOM_API_KEY=your_custom_api_key

# =============================================================================
# PREVIEW MODE (Strapi Draft Preview)
# =============================================================================

# Public URL of the client for preview links
CLIENT_URL=https://tiween.tn

# Enable Strapi preview feature
STRAPI_PREVIEW_ENABLED=true

# Shared secret between Strapi and Next.js for preview
STRAPI_PREVIEW_SECRET=your_preview_secret

# =============================================================================
# IMAGEKIT (Image Storage & CDN)
# =============================================================================

# ImageKit credentials (get from imagekit.io dashboard)
# IMAGEKIT_PUBLIC_KEY=public_xxxxx
# IMAGEKIT_PRIVATE_KEY=private_xxxxx
# IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_id
IMAGEKIT_FOLDER=tiween

# =============================================================================
# EMAIL (Mailgun)
# =============================================================================

# Mailgun credentials
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=mg.tiween.tn
# MAILGUN_HOST=https://api.eu.mailgun.net
# MAILGUN_EMAIL=noreply@tiween.tn

# =============================================================================
# MONITORING (Sentry)
# =============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Sentry organization and project (for source map uploads)
# SENTRY_ORG=tiween
# SENTRY_PROJECT=tiween-client
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

# =============================================================================
# RECAPTCHA (Bot Protection)
# =============================================================================

# ReCAPTCHA v3 credentials
# NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_site_key
# RECAPTCHA_SECRET_KEY=your_secret_key
