{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.*local"],
  "globalEnv": [
    "NEXT_OUTPUT",
    "APP_PUBLIC_URL",
    "STRAPI_URL",
    "STRAPI_REST_READONLY_API_KEY",
    "SENTRY_SUPPRESS_GLOBAL_ERROR_HANDLER_FILE_WARNING",
    "WEBPACK_CACHE_TYPE"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", ".build/**", "public/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "dev": {
      "dependsOn": ["@tiween/shared-types#build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "dependsOn": ["@tiween/shared-types#build"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["@tiween/shared-types#build"],
      "outputs": ["storybook-static/**"]
    }
  },
  "ui": "tui"
}
