{
  "kind": "collectionType",
  "collectionName": "creative_works",
  "info": {
    "singularName": "creative-work",
    "pluralName": "creative-works",
    "displayName": "Creative Work",
    "description": "Films, plays, short films and other creative works"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "originalTitle": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "type": {
      "type": "enumeration",
      "enum": ["film", "play", "short-film"],
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "synopsis": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "duration": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "releaseYear": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "genres": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::creative-works.genre"
    },
    "credits": {
      "type": "component",
      "repeatable": true,
      "component": "creative-works.credit",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "poster": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "backdrop": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "photos": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "videos": {
      "type": "component",
      "repeatable": true,
      "component": "common.video",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "rating": {
      "type": "decimal",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "ageRating": {
      "type": "enumeration",
      "enum": ["TP", "PG12", "PG16", "PG18"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "distinctions": {
      "type": "component",
      "repeatable": true,
      "component": "creative-works.distinction",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "theatreDetails": {
      "type": "component",
      "repeatable": false,
      "component": "creative-works.theatre-details",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "externalIds": {
      "type": "component",
      "repeatable": false,
      "component": "creative-works.external-ids",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "component": "common.link",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}
