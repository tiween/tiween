{
  "kind": "collectionType",
  "collectionName": "property_categories",
  "info": {
    "singularName": "property-category",
    "pluralName": "property-categories",
    "displayName": "Property Category",
    "description": "Groups related properties (e.g., Accessibility, Facilities, Services)"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "description": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "icon": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "sortOrder": {
      "type": "integer",
      "default": 0,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::entity-properties.property-category",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::entity-properties.property-category",
      "mappedBy": "parent"
    },
    "properties": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::entity-properties.property-definition",
      "mappedBy": "category"
    }
  }
}
