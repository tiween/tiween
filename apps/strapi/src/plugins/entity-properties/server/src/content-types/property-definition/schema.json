{
  "kind": "collectionType",
  "collectionName": "property_definitions",
  "info": {
    "singularName": "property-definition",
    "pluralName": "property-definitions",
    "displayName": "Property Definition",
    "description": "Defines reusable property schemas with type, icon, and validation rules"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "description": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "type": {
      "type": "enumeration",
      "enum": ["boolean", "integer", "string", "enum"],
      "required": true,
      "default": "boolean",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "icon": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "enumOptions": {
      "type": "json",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "sortOrder": {
      "type": "integer",
      "default": 0,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::entity-properties.property-category",
      "inversedBy": "properties"
    }
  }
}
