{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Events linking creative works to venues with showtimes"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "creativeWork": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::creative-work.creative-work"
    },
    "venue": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::venue.venue"
    },
    "showtimes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::showtime.showtime",
      "mappedBy": "event"
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "scheduled",
        "cancelled",
        "completed"
      ],
      "default": "scheduled",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "richtext"
    },
    "poster": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "component": "common.social-link"
    },
    "recurring": {
      "type": "boolean",
      "default": false
    },
    "recurringRule": {
      "type": "string"
    }
  }
}
