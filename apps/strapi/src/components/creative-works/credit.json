        "playwright",
        "screenwriter",
        "adaptor",
        "translator",
        "composer",
        "musical-director",
        "choreographer",
        "cast",
        "set-designer",
        "costume-designer",
        "lighting-designer",
        "sound-designer",
        "projection-designer",
        "stage-manager",
        "producer",
        "executive-producer",
        "cinematographer",
        "editor",
        "other"
      ],
      "required": true
    },
    "character": {
      "type": "string"
    },
    "customRole": {
      "type": "string"
    },
    "billing": {
      "type": "integer",
