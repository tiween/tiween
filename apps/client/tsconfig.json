{
  "extends": "@tiween/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "lib": ["es2022", "DOM", "DOM.Iterable", "WebWorker"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prettier.config.js"
  ],
  "exclude": ["node_modules", "**/*.test.tsx", "**/*.test.ts"]
}
