{
  "name": "tiween",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build --cache-dir=.turbo",
    "build:strapi": "turbo run build --filter=@tiween/admin",
    "build:client": "turbo run build --filter=@tiween/client",
    "commit": "git-cz",
    "dev": "turbo dev",
    "dev:strapi": "turbo run dev --filter=@tiween/admin",
    "dev:client": "turbo run dev --filter=@tiween/client",
    "format": "prettier --write --cache --ignore-unknown \"**/*.{js,jsx,ts,tsx,md,css,scss}\"",
    "format:check": "prettier --check --cache --ignore-unknown \"**/*.{js,jsx,ts,tsx,md,css,scss}\"",
    "heroku-postbuild": "bash ./scripts/heroku/heroku-postbuild.sh",
    "preinstall": "npx only-allow yarn",
    "lint": "turbo lint",
    "postinstall": "yarn setup:apps",
    "prepare": "husky",
    "start:strapi": "turbo run start --filter=@tiween/admin",
    "start:client": "turbo run start --filter=@tiween/client",
    "setup:apps": "find . -name '*.example' -exec sh -c 'cp -n \"$1\" \"${1%.example}\"' _ {} \\;",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "prettier": "@tiween/prettier-config",
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tiween/eslint-config": "*",
    "@tiween/prettier-config": "*",
    "@tiween/typescript-config": "*",
    "commitizen": "4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.1",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2",
    "semantic-release": "^25.0.2",
    "semantic-release-monorepo": "^8.0.2",
    "turbo": "^2.0.9"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20",
    "yarn": ">=1.22"
  },
  "comments": {
    "prettier": "bump to 3.3.3 destroys types schemas generated by Strapi (@strapi/typescript-utils > generators > utils > prettier.format())"
  }
}
