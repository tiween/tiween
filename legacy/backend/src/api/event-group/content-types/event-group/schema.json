{
  "kind": "collectionType",
  "collectionName": "event_groups",
  "info": {
    "singularName": "event-group",
    "pluralName": "event-groups",
    "displayName": "EventGroup",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "subtitle": {
      "type": "string"
    },
    "shortTitle": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "startDate": {
      "type": "date"
    },
    "endDate": {
      "type": "date"
    },
    "poster": {
      "type": "media",
